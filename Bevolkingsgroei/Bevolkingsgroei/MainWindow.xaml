        <TextBox x:Name="bevolkingTextBox" HorizontalAlignment="Left" Margin="320,109,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="percentageTextBox" HorizontalAlignment="Left" Margin="320,155,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="resultTextBox" HorizontalAlignment="Left" Margin="152,187,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="288" Height="119"/>
        <Button x:Name="colculateButton" Content="Berkenen" HorizontalAlignment="Left" Margin="481,197,0,0" VerticalAlignment="Top" Width="64" Click="colculateButton_Click"/>
        <Button x:Name="clearButton" Content="Wissen" HorizontalAlignment="Left" Margin="481,232,0,0" VerticalAlignment="Top" Width="64" Click="clearButton_Click"/>
        <Button x:Name="closeButton" Content="Afsluiten" HorizontalAlignment="Left" Margin="481,268,0,0" VerticalAlignment="Top" Width="64" Click="closeButton_Click"/>

    </Grid>
</Window>
