<Window x:Class="Bevolkingsgroei.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bevolkingsgroei"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Land" HorizontalAlignment="Left" Margin="144,65,0,0" VerticalAlignment="Top"/>
        <Label Content="Huidige bevolking" HorizontalAlignment="Left" Margin="144,109,0,0" VerticalAlignment="Top"/>
        <Label Content="Groeipercentage " HorizontalAlignment="Left" Margin="144,151,0,0" VerticalAlignment="Top"/>
